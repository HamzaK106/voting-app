<div class="container mt-5">
  <h1>Edit Candidate for: <%= @election.title %></h1>
  <%= form_with model: [ :admin, @election, @candidate ], local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="d-grid">
      <%= f.submit "Update Candidate", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to "Back to Candidates", admin_election_candidates_path(@election), class: "btn btn-secondary" %>
  </div>
</div>
