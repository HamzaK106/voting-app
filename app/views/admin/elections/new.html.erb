<div class="container mt-5">
  <h1>New Election</h1>
  <%= form_with model: [:admin, @election], local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :starts_at, "Start Time", class: "form-label" %>
      <%= f.datetime_select :starts_at, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :ends_at, "End Time", class: "form-label" %>
      <%= f.datetime_select :ends_at, class: "form-control" %>
    </div>
    <div class="d-grid">
      <%= f.submit "Create Election", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to "Back to Elections", admin_elections_path, class: "btn btn-secondary" %>
  </div>
</div>
