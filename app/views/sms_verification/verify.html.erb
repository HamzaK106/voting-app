<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Enter Verification Code</h3>
        </div>
        <div class="card-body">
          <p class="text-center mb-4">
            We've sent a 6-digit verification code to <strong><%= current_user.phone %></strong>
          </p>
          
          <div class="alert alert-warning">
            <small>
              <strong>Note:</strong> The code expires in 10 minutes. 
              If you don't receive it, you can request a new one.
            </small>
          </div>
          
          <%= form_with url: verify_sms_verification_path, method: :post, local: true do |form| %>
            <div class="form-group">
              <%= form.label :verification_code, "Verification Code", class: "form-label" %>
              <%= form.text_field :verification_code, 
                  class: "form-control form-control-lg text-center",
                  placeholder: "Enter 6-digit code",
                  maxlength: 6,
                  pattern: "[0-9]{6}",
                  required: true %>
            </div>
            
            <div class="text-center mt-4">
              <%= form.submit "Verify Code", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
          
          <div class="text-center mt-3">
            <%= link_to "Request New Code", request_sms_verification_path, 
                method: :get, 
                class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
